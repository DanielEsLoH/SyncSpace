# Local Development Environment Variables

# Database
# For local development: Leave commented out (uses config/database.yml defaults)
# For production: Set your production database URL
# DATABASE_URL=postgresql://username:password@host:port/database

# Redis
# For local development: Leave commented out (uses redis://localhost:6379/0)
# For production: Set your production Redis URL
# REDIS_URL=redis://localhost:6379/0

# JWT Secret
JWT_SECRET_KEY=your_super_secret_jwt_key_change_this_in_production

# Brevo Email Service
BREVO_API_KEY=your_brevo_api_key_here
BREVO_FROM_EMAIL=no-reply@yourdomain.com

# URLs
CLIENT_URL=http://localhost:3000,http://localhost:3001
SERVER_URL=http://localhost:3001

# Cloudinary (Cloud storage for images)
CLOUDINARY_CLOUD_NAME=your_cloudinary_cloud_name
CLOUDINARY_API_KEY=your_cloudinary_api_key
CLOUDINARY_API_SECRET=your_cloudinary_api_secret
